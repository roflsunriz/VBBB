{
  "name": "vbbb",
  "version": "1.6.1",
  "description": "VBBB - 汎用掲示板ブラウザ",
  "author": "roflsunriz",
  "license": "MIT",
  "homepage": "https://github.com/roflsunriz/VBBB",
  "repository": {
    "type": "git",
    "url": "https://github.com/roflsunriz/VBBB.git"
  },
  "bugs": {
    "url": "https://github.com/roflsunriz/VBBB/issues"
  },
  "keywords": [
    "2ch",
    "5ch",
    "bbs",
    "browser",
    "desktop"
  ],
  "private": true,
  "main": "./out/main/index.js",
  "type": "module",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit -p tsconfig.node.json && tsc --noEmit -p tsconfig.web.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build:dist": "electron-vite build && electron-builder --config electron-builder.yml",
    "build:win": "electron-vite build && electron-builder --config electron-builder.yml --win",
    "build:linux": "electron-vite build && electron-builder --config electron-builder.yml --linux",
    "build:mac": "electron-vite build && electron-builder --config electron-builder.yml --mac",
    "rebuild": "electron-builder install-app-deps"
  },
  "engines": {
    "node": ">=22"
  },
  "devDependencies": {
    "@happy-dom/global-registrator": "^20.7.0",
    "@mdi/js": "^7.4.47",
    "@playwright/test": "^1.58.2",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/react-virtual": "^3.13.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/dompurify": "^3.2.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "@vitejs/plugin-react": "^5.1.4",
    "dompurify": "^3.3.1",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "electron-vite": "^5.0.0",
    "eslint": "^10.0.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-unused-imports": "^4.4.1",
    "happy-dom": "^20.6.1",
    "jsdom": "^28.1.0",
    "prettier": "^3.8.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "rollup-plugin-visualizer": "^7.0.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "zustand": "^5.0.11"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@xmldom/xmldom": "^0.8.11",
    "electron-updater": "^6.8.3",
    "https-proxy-agent": "^7.0.6",
    "iconv-lite": "^0.7.2",
    "zod": "^4.3.6"
  }
}
